<% title "Locations" %>

<h1>Locations <small>Admin</small></h1>
<p><%= link_to "Back to Admin", admin_root_path %></p>

<div class="text-center">

</div>

<%= form_tag locations_path, method: 'get', html: {role: "form"} do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :address => nil, class: "btn btn-sm btn-primary" %>
    <%= link_to "All", locations_path, {class: "btn btn-sm btn-link"} %>
  </p>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Location Id</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @locations.each do |location| %>
  
  <tr>
    <td><%= location.id %></td>
    <td><%= link_to location.address, location_path(location) %></td>
    <td><%= location.latitude %></td>
    <td><%= location.longitude %></td>
    <td><%= link_to "Show", location %></td>
    <td><%= link_to "Edit", edit_location_path(location) %></td>
    <td><%= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete %></td>
    
  </tr>
  
  <% end %>
  
</table>

<p><%= link_to "New Location", new_location_path %></p>

<div class="text-center">
  
</div>
